ModalScreen {
    background: rgba(0, 0, 0, 0.5); /* Semi-transparante achtergrond */
}

Prompt > Container {
    background: $surface;
    border: thick $background 80%;
    padding: 1 1;
    width: 70;
    height: auto;
    align: center middle;
}

Prompt > Container > Label#question{
    width: 100%;
    text-style: bold;
    content-align-horizontal: center;
    margin-top: 2;
    color: chartreuse;
}

Prompt > Container > Label#title {
    width: 100%;
    text-style: bold italic;
    content-align: center top;
    color: wheat;
}

Prompt > Container > Static#timer {
    text-style: italic;
    content-align-horizontal: center;
    margin-top: 2;
    color: red;
}

Prompt > Container > Static#response {
    width: 100%;
    height: 5;
    content-align-horizontal: center;
    content-align-vertical: middle;
    margin-top: 1;

}